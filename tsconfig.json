{
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
{
    "name": "lm-client",
    "version": "1.0.0",
    "description": "Local Media Client",
    "author": "Csányi István",
    "license": "GPL-3.0-only",
    "repository": {
        "type": "git",
        "url": "https://github.com/AmionSky/lm-client-desktop.git"
    },
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "build": "webpack --config webpack/webpack.dev.config.js",
        "watch": "webpack --watch --config webpack/webpack.dev.config.js",
        "build-prod": "webpack --config webpack/webpack.prod.config.js",
        "package:win32": "electron-packager dist lm-client-win32 --asar --out=packages --platform=win32 --arch=ia32 --overwrite",
        "package:win64": "electron-packager dist lm-client-win64 --asar --out=packages --platform=win32 --arch=x64 --overwrite",
        "package:linux": "electron-packager dist lm-client-lnx64 --asar --out=packages --platform=linux --arch=x64 --overwrite"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-typescript": "^7.9.0",
        "@types/temp": "^0.8.34",
        "@types/url-join": "^4.0.0",
        "babel-loader": "^8.1.0",
        "copy-webpack-plugin": "^5.0.5",
        "css-loader": "^3.5.2",
        "electron": "^8.2.3",
        "electron-packager": "^14.2.1",
        "style-loader": "^1.1.4",
        "terser-webpack-plugin": "^2.3.5",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "electron-store": "^5.1.1",
        "open": "^6.4.0",
        "temp": "^0.9.1",
        "url-join": "^4.0.1"
    }
}
